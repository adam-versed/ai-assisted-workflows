# Development Services Procfile
# Generated by setup-dev-monitoring on 2025-07-20 20:01:47
# Components: frontend, backend
#
# Usage:
#   foreman start                    - Start all services
#   foreman start web                - Start specific service
#   shoreman Procfile               - Alternative process manager
#
# Log Format: [HH:MM:SS] [LABEL] message


frontend: cd apps/web && PORT=3000 npm run dev 2>&1 | while IFS= read -r line; do echo "[$(date '+%H:%M:%S')] [FRONTEND] $line"; done | tee -a ./dev.log
backend: cd packages/backend && npm run dev 2>&1 | while IFS= read -r line; do echo "[$(date '+%H:%M:%S')] [BACKEND] $line"; done | tee -a ./dev.log

logs: tail -f ./dev.log 2>/dev/null || (echo 'Waiting for services to start...' && sleep 2 && tail -f ./dev.log)