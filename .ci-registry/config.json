{
  "project_name": "ai-assisted-workflows",
  "version": "1.0",
  "setup_date": "2025-08-19T15:31:31Z",
  "analysis": {
    "similarity_threshold": 0.75,
    "exact_duplicate_threshold": 1.0,
    "high_similarity_threshold": 0.8,
