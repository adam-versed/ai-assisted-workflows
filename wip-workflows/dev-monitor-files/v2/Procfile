# Development Services Procfile
# Generated by setup-dev-monitoring on 2025-07-21 12:32:03
# Components: FRONTEND, BACKEND
#
# Usage:
#   foreman start                    - Start all services
#   foreman start web                - Start specific service
#
# Log Format: [HH:MM:SS] [LABEL] message


frontend: LOGFILE="$(pwd)/dev.log" && cd apps/web && PORT=3000 npm run dev -- --port 3000 2>&1 | while IFS= read -r line; do echo "[$(date '+%H:%M:%S')] [FRONTEND] $line"; done | tee -a "$LOGFILE"
backend: LOGFILE="$(pwd)/dev.log" && cd packages/backend && npm run dev 2>&1 | while IFS= read -r line; do echo "[$(date '+%H:%M:%S')] [BACKEND] $line"; done | tee -a "$LOGFILE"
